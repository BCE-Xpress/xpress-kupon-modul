@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable< XpressKuponXpressKupon.Models.Item >>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers


<div id="Items-@Dnn.ModuleContext.ModuleId">
    @if (Model.Count() == 0)
    {
        <p>@Dnn.LocalizeString("NoItems")</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">UserId</th>
                    <th scope="col">Points</th>
                    <th scope="col">PointsHeld</th>
                    <th scope="col">TransactionTime</th>
                    <th scope="col">StoreId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.UserId</td>
                        <td>@item.Points</td>
                        <td>@item.PointsHeld</td>
                        <td>@item.TransactionTime</td>
                        <td>@item.StoreId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
