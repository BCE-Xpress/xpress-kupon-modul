@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<XpressKuponXpressKupon.Models.Item>>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers


<div id="Items-@Dnn.ModuleContext.ModuleId">
    @if (Model.Count() == 0)
    {
        <p>@Dnn.LocalizeString("NoItems")</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">GiftCardId</th>
                    @*<th scope="col">LineItemId</th>*@
                    <th scope="col">CardNumber</th>
                    <th scope="col">Amount</th>
                    <th scope="col">UsedAmount</th>
                    <th scope="col">IssueDateUtc</th>
                    <th scope="col">ExpirationDateUtc</th>
                    <th scope="col">RecipientEmail</th>
                    <th scope="col">RecipientName</th>
                    <th scope="col">Enabled</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.GiftCardId</th>
                        @*<td>@item.LineItemId</td>*@
                        <td>@item.CardNumber</td>
                        <td>@item.Amount</td>
                        <td>@item.UsedAmount</td>
                        <td>@item.IssueDateUtc</td>
                        <td>@item.ExpirationDateUtc</td>
                        <td>@item.RecipientEmail</td>
                        <td>@item.RecipientName</td>
                        <td>@item.Enabled</td>
                        <td><a href="@Url.Action("Edit", "Item", new {ctl = "Edit", itemId = item.GiftCardId})">@Dnn.LocalizeString("EditItem")</a></td>
                        <td><a href="@Url.Action("Delete", "Item", new {itemId = item.GiftCardId})">@Dnn.LocalizeString("DeleteItem")</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>